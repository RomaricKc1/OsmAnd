<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:osmand="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/icon"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginTop="@dimen/content_padding"
		tools:srcCompat="@drawable/ic_action_alert"
		tools:tint="@color/color_osm_edit_delete" />

	<net.osmand.plus.widgets.TextViewEx
		android:id="@+id/title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:letterSpacing="@dimen/text_button_letter_spacing"
		android:paddingLeft="@dimen/content_padding"
		android:paddingTop="@dimen/content_padding_small"
		android:paddingRight="@dimen/content_padding"
		android:paddingBottom="@dimen/content_padding_small"
		android:textColor="?android:textColorPrimary"
		android:textSize="12sp"
		osmand:lineHeight="@dimen/welcome_header_text_size"
		osmand:typeface="@string/font_roboto_medium"
		tools:text="@string/backup_delete_all_data" />

	<net.osmand.plus.widgets.TextViewEx
		android:id="@+id/description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:letterSpacing="@dimen/text_button_letter_spacing"
		android:paddingLeft="@dimen/content_padding"
		android:paddingRight="@dimen/content_padding"
		android:paddingBottom="0dp"
		android:textColor="?android:textColorPrimary"
		android:textSize="11sp"
		osmand:lineHeight="@dimen/default_title_line_height"
		osmand:typeface="@string/font_roboto_regular"
		tools:text="@string/backup_delete_all_data_warning" />

</LinearLayout>